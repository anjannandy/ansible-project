# Database configuration
db=postgres
db-url=jdbc:postgresql://{{ db_host }}:{{ db_port }}/{{ db_name }}
db-username={{ db_user }}
db-password={{ db_password }}

# HTTPS configuration
https-certificate-file={{ keycloak_home }}/conf/ssl/keycloak.crt
https-certificate-key-file={{ keycloak_home }}/conf/ssl/keycloak.key
https-port=8443

# Hostname configuration
hostname={{ keycloak_hostname }}
hostname-strict=false
hostname-strict-https=false

# APIs and observability
metrics-enabled=true
health-enabled=true

# Admin user
# Set during first startup via environment variables

# Performance tuning for your load
cache=ispn
cache-stack=tcp

# Logging
log-level=INFO
